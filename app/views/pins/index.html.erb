<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading"><h2>Pins</h2></div>
<div class="panel-body">

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.description %></td>
        <td>
          <span class="badge badge-primary"><%= link_to ' Show', pin %></span></td>
          <% if pin.user == current_user %>
        <td>
          <span class="badge badge-secondary"><%= link_to ' Edit', edit_pin_path(pin) %></span></td>
        <td>
          <span class="badge badge-danger"><%= link_to ' Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></span><br></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<button type="button" class="btn btn-primary">
<%= link_to 'New Pin', new_pin_path %>
</button>